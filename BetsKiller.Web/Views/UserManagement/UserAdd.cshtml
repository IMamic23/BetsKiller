@model BetsKiller.ViewModel.UserManagement.UserAddViewModel
@{
    ViewBag.Title = "Add user";
}

@Html.ValidationSummary()

<!-- Add new user panel -->
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="counter_section">
            <div class="slider_overlay"></div>
            <div class="container">
                <div class="counter_area" align="center">
                    <div class="heading">
                        <h2 class="wow fadeInRightBig white">Add user</h2>
                    </div>
                    <div class="col-lg-offset-4 col-lg-4 col-md-4 col-sm-4">
                        <div class="counter wow fadeInUp">
                            @using (Html.BeginForm("UserAdd", "UserManagement", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary("", new { @style = "color: red" })

                                <div class="form-group">
                                    @Html.LabelFor(x => x.FullName, new { @class = "control-label col-sm-4", style = "color: white; text-align: left" })
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Email, new { @class = "control-label col-sm-4", style = "color: white; text-align: left" })
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(x => x.Password, new { @class = "control-label col-sm-4", style = "color: white; text-align: left" })
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Roles, new { @class = "control-label col-sm-4", style = "color: white; text-align: left" })
                                    <div class="col-sm-8">
                                        <select id="Roles" name="Roles" class="form-control" data-placeholder="Choose Roles...">
                                            @foreach (SelectListItem role in Model.AllRoles)
                                            {
                                                if (role.Selected)
                                                {
                                                    <option selected="selected" value="@role.Value">@role.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@role.Value">@role.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(x => x.RoleActiveFrom, new { @class = "control-label col-sm-4", style = "color: white; text-align: left" })
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(x => x.RoleActiveFrom, new { @class = "form-control date" })
                                        </div>
                                    </div>

                                <div class="form-group">
                                    @Html.LabelFor(x => x.RoleActiveTo, new { @class = "control-label col-sm-4", style = "color: white; text-align: left" })
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(x => x.RoleActiveTo, new { @class = "form-control date" })
                                    </div>
                                    </div>

                                <button type="submit" class="btn btn-primary">Add new user</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('.date').datepicker({
            format: "MM d, yyyy",
            todayBtn: true,
            clearBtn: true
        });
    </script>
}