@model BetsKiller.ViewModel.UserManagement.UserAddViewModel
@{
    ViewBag.Title = "Add user";
}

<h3>Add new user</h3>

@Html.ValidationSummary()

<!-- Add new user panel -->
<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                User informations
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("UserAdd", "UserManagement", FormMethod.Post, new { @class = "form-horizonral", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @style = "color: red" })

                    <div class="form-group">
                        @Html.LabelFor(x => x.FullName)
                        @Html.TextBoxFor(x => x.FullName)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Email)
                        @Html.TextBoxFor(x => x.Email)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Password)
                        @Html.TextBoxFor(x => x.Password)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Roles)
                        <select id="Roles" name="Roles" class="span3" data-placeholder="Choose Roles...">
                            @foreach (SelectListItem role in Model.AllRoles)
                            {
                                if (role.Selected)
                                {
                                    <option selected="selected" value="@role.Value">@role.Text</option>
                                }
                                else
                                {
                                    <option value="@role.Value">@role.Text</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.RoleActiveFrom)
                        @Html.TextBoxFor(x => x.RoleActiveFrom)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.RoleActiveTo)
                        @Html.TextBoxFor(x => x.RoleActiveTo)
                    </div>

                    <button type="submit" class="btn btn-primary">Add new user</button>
                }
            </div>
        </div>
    </div>
</div>