<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>BetsKiller - NBA and MLB Games Predictions</title>

    <!--Mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- SEO content -->
	<meta name="title" content=">BetsKiller - NBA Games Predictions, Bets, News and Rumors">
    <meta name="description" content="BetsKiller is Leading Software for NBA Games Predictions, Betting Tips, Tracking of Your Bets, News, Headlines and Statistics, Scores and Schedule">
    <meta name="keywords" content="sports predictions, basketball, nba, money, professional, free betting tips, bets, tips, handicapper">

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    @Styles.Render("~/Content/landing-css")

    <!-- Google -->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Varela' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
    <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-76824175-1', 'auto');
            ga('send', 'pageview');
    </script>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <!-- BEGAIN PRELOADER -->
    <div id="preloader">
        <div id="status">&nbsp;</div>
    </div>
    <!-- END PRELOADER -->

    <!-- BEGIN MAIN MENU -->
    <div class="menu_area">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <!--Main navigation left - Logo-->
                <div class="navbar-header">
                    <!-- FOR MOBILE VIEW COLLAPSED BUTTON -->
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <!-- LOGO -->
                    <!-- TEXT BASED LOGO -->
                    <a class="navbar-brand" href="/">Bets<span class="logo_text_2">Killer</span></a>
                </div>

                <!--Main navigation right - Login / Signup-->
                <div id="navbar" class="navbar-collapse collapse">
                    <ul id="top-menu" class="nav navbar-nav navbar-right main_nav">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
							<a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary">TRY DASHBOARD</a>
							</li>
                            <li class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
							<a href="@Url.Action("Login", "Account")" class="col-lg-6 col-md-6 col-sm-6 col-xs-6 btn btn-success">Log In</a>
							<a href="@Url.Action("Register", "Account")" class="col-lg-6 col-md-6 col-sm-6 col-xs-6 btn btn-danger">Sign Up</a>
							</li>
                        }
                        else
                        {
                            <li class="active">
                                <span class="badge" style="margin-right: 5px">Welcome @User.Identity.Name</span>
                                <a href="@Url.Action("Index", "Dashboard")">Enter dashboard</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <!-- END MAIN MENU -->
    @RenderBody()

    <!-------------- START FOOTER -------------->
    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="footer_left">
                        <p>
                            Designed By 
                            <span style="color: #337ab7">Bets Killer Team</span>
                        </p>
                        <p>
                            <span style="color: #da002a">info@betskiller.com</span>
                        </p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div align="center">
                        <p><a href="@Url.Action("TermsOfUse", "Home")" style="color: white">Terms of use</a></p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="footer_right">
                        <ul class="social_nav">
                            <li><a href="https://www.facebook.com/BetsKillerAnalysis" target="_blank"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="https://twitter.com/BetsKiller" target="_blank"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="https://www.instagram.com/betskiller/" target="_blank"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-------------- END FOOTER -------------->

    @Scripts.Render("~/bundles/landing-js")
    @RenderSection("Scripts", false)
</body>
</html>
