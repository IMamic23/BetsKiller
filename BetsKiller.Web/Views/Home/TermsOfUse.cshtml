
@{
    ViewBag.Title = "TermsOfUse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="termsofuse">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="counter_section">
                <div class="slider_overlay"></div>
                <div class="container">
                    <div class="counter_area">
                        <div class="heading text-center">
                            <h2 class="wow fadeInRightBig white">Terms of use</h2>
                        </div>
                        <!-- START OVERALL STATISTICS COUNTER-->
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="counter wow fadeInUp">
                                <i class="fa fa-usd fa-2x"></i>
                                <h2 class="timer count-title" id="count-number" data-speed="1500"></h2>
                                <p class="count-text ">All Time Dollars <strong>Profit</strong></p>
                            </div>
                        </div>
                        <!-- START OVERALL STATISTICS COUNTER-->
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="counter wow fadeInUp">
                                <i class="fa fa-bar-chart fa-2x"></i>
                                <h2 class="timer count-title" id="count-number2" data-speed="1500"></h2>
                                <p class="count-text ">Overall <strong>Predictions</strong> Made</p>
                            </div>
                        </div>
                        <!-- START OVERALL STATISTICS COUNTER-->
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="counter wow fadeInUp">
                                <i class="fa fa-exchange fa-2x"></i>
                                <h2 class="timer count-title" id="count-number3" data-speed="1500"></h2>
                                <p class="count-text ">All Time <strong>ROI</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>