@model BetsKiller.ViewModel.Home.HomeViewModel

<!-------------- START SCROLL BUTTONS -------------->
<a href="#" id="scrollTop" class="scrollToTop"><i class="fa fa-arrow-up"></i></a>
<a href="#" id="scrollBottom" class="scrollToTop"><i class="fa fa-arrow-down"></i></a>
<!-------------- END SCROLL BUTTONS -------------->

<!-------------- BEGIN HEADER -------------->
<header id="header">

    <!-- BEGIN SLIDER AREA-->
    <div class="slider_area">

        <!-- BEGIN SLIDER-->
        <div id="slides">
            <ul class="slides-container">

                @foreach (BetsKiller.ViewModel.Home.HomeImageViewModel image in Model.Images)
                {
                    <!-- SLIDE OVERLAY -->
                    <li>
                        <div class="slider_overlay"></div>
                        <img src="@image.Path" alt="img">
                        <div class="slider_caption">
                            <h2>@image.Caption</h2>
                            <p style="margin-top: 50px">
                                @image.Description
                            </p>
                        </div>
                    </li>
                }

            </ul>

            <!-- BEGAIN SLIDER NAVIGATION -->
            <nav class="slides-navigation">
                <!-- PREV IN THE SLIDE -->
                <a class="prev" href="/item1">
                    <span class="icon-wrap"></span>
                    <h3><strong>Prev</strong></h3>
                </a>
                <!-- NEXT IN THE SLIDE -->
                <a class="next" href="/item3">
                    <span class="icon-wrap"></span>
                    <h3><strong>Next</strong></h3>
                </a>
            </nav>
        </div>
        <!-- END SLIDER-->

    </div>
    <!-- END SLIDER AREA -->

</header>
<!-------------- END HEADER -------------->
<!-------------- BEGIN SERVICE -------------->
<section id="service">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <!-- BEGIN SERVICE HEADING -->
                <div class="heading text-center">
                    <h2 class="wow fadeInLeftBig">Our Services</h2>
                    <p>Bets Killer offers these incredible services for enhanced betting experience</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <!-- BEGIN SERVICE  -->
                <div class="service_area">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <!-- BEGIN SINGLE SERVICE -->
                            <div class="single_service wow fadeInRight">
                                <div class="service_iconarea">
                                    <span class="fa fa-search service_icon"></span>
                                </div>
                                <h3 class="service_title">Games<br />Analysis</h3>
                                <p>Use our daily Advanced Analysis of Games to Win more frequently</p>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <!-- BEGIN SINGLE SERVICE -->
                            <div class="single_service wow fadeInLeft">
                                <div class="service_iconarea">
                                    <span class="fa fa-line-chart service_icon"></span>
                                </div>
                                <h3 class="service_title">Bets<br />Tracker</h3><span class="label label-danger">COMING SOON</span>
                                <p>Take advantage of our Comprehensive System to track all of your Bets in Real Time</p>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <!-- BEGIN SINGLE SERVICE -->
                            <div class="single_service wow fadeInRight">
                                <div class="service_iconarea">
                                    <span class="fa fa-pie-chart service_icon"></span>
                                </div>
                                <h3 class="service_title">Bets<br />Analyser</h3><span class="label label-danger">COMING SOON</span>
                                <p>See the correct steps to placing a Bet and what Factors you need to take into consideration</p>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <!-- BEGIN SINGLE SERVICE -->
                            <div class="single_service wow fadeInLeft">
                                <div class="service_iconarea">
                                    <span class="fa fa-gift service_icon"></span>
                                </div>
                                <h3 class="service_title">Bets<br />Contests</h3><span class="label label-danger">COMING SOON</span>
                                <p>Compete for Supremacy and become a Bets Killer Champion</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-------------- END SERVICE -------------->
<!-------------- BEGIN OVERALL STATISTICS -------------->
<section id="works">
    <!-- BEGIN OVERALL STATISTICS SECTION -->
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="counter_section">
                <!-- OVERALL STATISTICS OVERLAY -->
                <div class="slider_overlay"></div>
                <div class="container">
                    <div class="counter_area">
                        <div class="heading text-center">
                            <h2 class="wow fadeInRightBig white">Overall Statistics</h2>
                        </div>
                        <!-- START OVERALL STATISTICS COUNTER-->
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="counter wow fadeInUp">
                                <i class="fa fa-usd fa-2x"></i>
                                <h2 class="timer count-title" id="count-number" data-speed="1500">@Model.Profit</h2>
                                <p class="count-text ">All Time Dollars <strong>Profit</strong></p>
                            </div>
                        </div>
                        <!-- START OVERALL STATISTICS COUNTER-->
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="counter wow fadeInUp">
                                <i class="fa fa-bar-chart fa-2x"></i>
                                <h2 class="timer count-title" id="count-number2" data-speed="1500">@Model.Predictions</h2>
                                <p class="count-text ">Overall <strong>Predictions</strong> Made</p>
                            </div>
                        </div>
                        <!-- START OVERALL STATISTICS COUNTER-->
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="counter wow fadeInUp">
                                <i class="fa fa-exchange fa-2x"></i>
                                <h2 class="timer count-title" id="count-number3" data-speed="1500">@Model.ROI</h2>
                                <p class="count-text ">All Time <strong>ROI</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-------------- END OVERALL STATISTICS -------------->
    <!-------------- BEGIN MOTIVATION MESSAGE -------------->
    <div class="row">
        <div class="portfolio_area">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="container">
                        <div class="heading text-center">
                            <h2 class="wow fadeInLeftBig white">Quote of the Day</h2>
                            <p>@Model.Quote</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-------------- END OVERALL STATISTICS -------------->
<!-------------- BEGIN PRICING -------------->
