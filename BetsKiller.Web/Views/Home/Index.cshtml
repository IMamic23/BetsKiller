                                <li>One Premium Analysis<strong> Every Day</strong></li>
                                <li><strike><strong>Advanced</strong> Bets Tracker</strike><br /><span style="color: red">coming soon</span></li>
                            </ul>
                            <a type="button" href="@Url.Action("Index", "Dashboard")?subscribe=true" class="btn btn-primary">Select Plan</a>
                        </div>
                    </div>
                    <!-- BEGIN BUSINESS PRICE TABLE -->
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <div class="single_price wow fadeInUp">
                            <h3>Ultimate<small><label class="label label-danger label-as-badge" style="margin-left: 7px">COMING SOON</label></small></h3>
                            <div class="price">
                                <h4>$90</h4>
                                <span>per month</span>
                            </div>
                            <ul class="price_features">
                                <li>All Premium Analysis<strong> Every Day</strong></li>
                                <li><strong><strike>Games Analyser</strike></strong><br /><span style="color: red">coming soon</span></li>
                            </ul>
                            <button type="button" href="#" class="btn btn-primary disabled">Select Plan</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-------------- END PRICING -------------->