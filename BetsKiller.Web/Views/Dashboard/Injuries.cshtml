@{
    ViewBag.Title = "Injuries";
    Layout = "~/Views/Dashboard/_Layout.cshtml";
}

@section Styles {
    @Styles.Render("~/Content/dashboard-css")
}

@model BetsKiller.ViewModel.Dashboard.Injuries.InjuriesViewModel

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Injuries
        <small>NBA</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Dashboard/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Injuries</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- Main row -->
    <div class="row">

            @for (int i = 0; i < Model.Teams.Count; i++)
            {
                if (i == 0 || i == (Model.Teams.Count / 2) + 1)
                { 
                    @:<section class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                }
                
                <!-- Injuries -->
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" style="width: 100%">
                                <thead>
                                    <tr>
                                        <th class="text-center" style="width: 30px"><span class="label label-sm label-@Model.Teams[i].TeamName.ToLower()">@Model.Teams[i].TeamName</span></th>
                                        <th class="text-center">Position</th>
                                        <th class="text-center">Name</th>
                                        <th class="text-center">Date</th>
                                        <th class="text-center">Type</th>
                                        <th class="text-center">Returns
                                        <th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (BetsKiller.ViewModel.Dashboard.Injuries.InjuriesPlayerViewModel player in Model.Teams[i].Players)
                                    {
                                        <tr>
                                            <td class="text-center"></td>
                                            <td class="text-center">@player.Position</td>
                                            <td class="text-center">@player.Name</td>
                                            <td class="text-center">@player.Date</td>
                                            <td class="text-center">@player.Type</td>
                                            <td class="text-center">@player.Returns</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                if (i == (Model.Teams.Count / 2) || i == (Model.Teams.Count - 1))
                {
                    @:</section>
                }
            }

    </div>

</section>

@section Scripts {

    <script src="~/Scripts/Dashboard/app.min.js"></script>

}