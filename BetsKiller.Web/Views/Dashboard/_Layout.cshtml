<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <title>BetsKiller | Dashboard</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Styles -->
    @Styles.Render("~/Content/css")
    @RenderSection("Styles", false)

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition skin-blue sidebar-mini">

    <!-- BEGAIN PRELOADER -->
    <div id="preloader">
        <div id="status">&nbsp;</div>
    </div>
    <!-- END PRELOADER -->

    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Header -->
        <header class="main-header">
            <!-- Logo -->
            <a href="/" class="navbar-fixed-top logo">
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><img src="~/Content/Images/logoNormal.png" width="84" height="51" /></span>
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo_mini" style="margin-left: -6px"><img src="~/Content/Images/logoMini.png" width="32" height="32" /></span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-fixed-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <div class="navbar-custom-menu">

                    
                        <ul class="nav navbar-nav">

                            @*if (User.IsInRole(BetsKiller.Helper.Constants.RolesConst.Free))
                            {*@
                            <li class="dropdown user user-menu">
                                <a href="#" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#subscribeModal"><i class="fa fa-star" style="margin-right: 5px"></i>Subscribe</a>
                            </li>
                            @*}*@
                            @if (User.Identity.IsAuthenticated)
                            {
                                
                                
                                <li class="dropdown user user-menu">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="fa fa-user"></i>
                                        <span class="hidden-xs">@User.Identity.Name</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li class="user-footer">

                                            <div class="pull-left">
                                                <button type="button" class="btn btn-default btn-flat" data-toggle="modal" data-target="#changePasswordModal"><i class="fa fa-key" style="margin-right: 8px"></i>Change password</button>
                                            </div>

                                            <div class="pull-right">
                                                <a href="@Url.Action("Logout", "Account")" class="btn btn-default btn-flat"><i class="fa fa-sign-out" style="margin-right: 8px"></i>Sign out</a>
                                            </div>

                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="dropdown user user-menu">
                                    <a href="@Url.Action("Login", "Account")" class="dropdown-toggle"><i class="fa fa-sign-in" style="margin-right: 8px"></i>Login</a>
                                </li>
                            }
                        </ul>

                    @if (User.IsInRole(BetsKiller.Helper.Constants.RolesConst.Admin))
                    {
                        <ul class="nav navbar-nav">
                            <li class="dropdown user user-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-pencil"></i>
                                    <span class="hidden-xs">Users administration</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="user-footer">

                                        <div class="pull-left">
                                            <a href="@Url.Action("UserList", "UserManagement")" class="btn btn-default btn-flat"><i class="fa fa-sign-out" style="margin-right: 8px"></i>Users list</a>
                                        </div>

                                        <div class="pull-right">
                                            <a href="@Url.Action("UserAdd", "UserManagement")" class="btn btn-default btn-flat"><i class="fa fa-sign-out" style="margin-right: 8px"></i>Add user</a>
                                        </div>

                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }

                </div>
            </nav>
        </header>

        <!-- Left side column. contains the sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header">MAIN NAVIGATION</li>
                    <li>
                        <a href="/Dashboard/">
                            <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                            <i class="fa fa-angle-right pull-right"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-eye"></i> <span>Bets Tracker</span>
                            <small class="label pull-right bg-blue">Developing...</small>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-search"></i> <span>Games Analyzer</span>
                            <small class="label pull-right bg-blue">Developing...</small>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-magic"></i> <span>Sports Picks</span>
                            <small class="label pull-right bg-blue">Developing...</small>
                        </a>
                    </li>
                    <li>
                        <a href="/Dashboard/TeamsStats/">
                            <i class="fa fa-bar-chart"></i> <span>Teams Stats</span>
                            <i class="fa fa-angle-right pull-right"></i>
                        </a>
                    </li>
                    <li>
                        <a href="/Dashboard/Leaders/">
                            <i class="fa fa-area-chart"></i> <span>Leaders</span>
                            <i class="fa fa-angle-right pull-right"></i>
                        </a>
                    </li>
                    <li>
                        <a href="/Dashboard/Standings/">
                            <i class="fa fa-list-ol"></i> <span>Standings</span>
                            <i class="fa fa-angle-right pull-right"></i>
                        </a>
                    </li>
                    <li>
                        <a href="/Dashboard/TeamsRosters/">
                            <i class="fa fa-group"></i> <span>Teams & Roster</span>
                            <i class="fa fa-angle-right pull-right"></i>
                        </a>
                    </li>
                    <li>
                        <a href="/Dashboard/ScheduleResults/">
                            <i class="fa fa-table"></i> <span>Schedule & Results</span>
                            <i class="fa fa-angle-right pull-right"></i>
                        </a>
                    </li>
                    <li>
                        <a href="/Dashboard/Injuries/">
                            <i class="fa fa-medkit"></i> <span>Injuries</span>
                            <i class="fa fa-angle-right pull-right"></i>
                        </a>
                    </li>
                    <li>
                        <a href="/Dashboard/PowerRankings/">
                            <i class="fa fa-institution"></i> <span>Power Rankings</span>
                            <i class="fa fa-angle-right pull-right"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="glyphicon glyphicon-knight"></i> <span>Contest</span>
                            <small class="label pull-right bg-blue">Developing...</small>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-comments"></i> <span>Community</span>
                            <small class="label pull-right bg-blue">Developing...</small>
                        </a>
                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; @DateTime.Now.Year BetsKiller</strong> All rights reserved.
        </footer>

        <!-- Modal profile -->
        <div class="modal fade" id="changePasswordModal" role="dialog">
            <div class="modal-dialog modal-md">
                <div class="modal-content">

                    @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="modal-header" style="background-color:#006dcc">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" style="color:white">Change password</h4>
                        </div>

                        <div class="modal-body">

                            <div class="row">
                                <div class="form-group" style="margin-top:10px">
                                    <label for="inputemail" class="col-sm-3 control-label">Old password</label>
                                    <div class="col-sm-9">
                                        <input type="password" class="form-control" for="OldPassord" placeholder="Enter old password">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group" style="margin-top:10px">
                                    <label for="inputemail" class="col-sm-3 control-label">New password</label>
                                    <div class="col-sm-9">
                                        <input type="password" class="form-control" for="NewPassword" placeholder="Enter new password (at least 6 characters)">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group" style="margin-top:10px">
                                    <label for="inputemail" class="col-sm-3 control-label">Confirm password</label>
                                    <div class="col-sm-9">
                                        <input type="password" class="form-control" for="ConfirmPassword" placeholder="Repeat password">
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>

    <!-- <Scripts> -->
    @Scripts.Render("~/bundles/js")
    @RenderSection("Scripts", false)

</body>
</html>
