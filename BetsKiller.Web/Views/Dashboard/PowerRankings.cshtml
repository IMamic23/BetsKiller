@{
    ViewBag.Title = "Power Rankings";
    Layout = "~/Views/Dashboard/_Layout.cshtml";
}

@section Styles {
    @Styles.Render("~/Content/dashboard-css")
}

@model BetsKiller.ViewModel.Dashboard.PowerRankings.PowerRankingsViewModel

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Power Rankings
        <small>NBA</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Dashboard/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Power rankings</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- Main row -->
    <div class="row">

        <section class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3>Power rankings</h3>
                </div>
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped" id="tableList" style="width: 100%">
                            <thead>
                                <tr>
                                    <th class="text-center">Rank</th>
                                    <th class="text-center">Rank last week</th>
                                    <th class="text-center">Team</th>
                                    <th class="text-center">Score</th>
                                    <th class="text-center">Pace</th>
                                    <th class="text-center">Off Rtg</th>
                                    <th class="text-center">Def Rtg</th>
                                    <th class="text-center">Net Rtg</th>
                                    <th class="text-center">Games this week</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (BetsKiller.ViewModel.Dashboard.PowerRankings.PowerRankingsTeamViewModel team in Model.Teams)
                                {
                                    <tr>
                                        <td class="text-center" style="@team.Rank.Style"><strong>@team.Rank.Value</strong></td>
                                        <td class="text-center">@team.RankLastWeek</td>
                                        <td class="text-center"><span class="label label-sm label-@team.TeamName.ToLower()">@team.TeamName</span></td>
                                        <td class="text-center">@team.Score</td>
                                        <td class="text-center">@team.Pace</td>
                                        <td class="text-center">@team.OffRtg</td>
                                        <td class="text-center">@team.DefRtg</td>
                                        <td class="text-center">@team.NetRtg</td>
                                        <td class="text-center">@team.GamesThisWeek</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </section>

    </div>

</section>

@section Scripts {
    <script>
        $('#tableList').DataTable({
            "paging": false,
            "searching": false,
            "ordering": true,
            "info": false
        });
    </script>
}